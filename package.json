{
  "name": "foglet",
  "version": "0.0.1",
  "description": "",
  "main": "./lib/foglet.js",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/folkvir/foglet.git"
  },
  "scripts": {
    "test": "npm run karma",
    "karma": "karma start karma.config.js",
    "cover": "nyc npm test",
    "proper": "xo --fix ./lib/f*.js ",
    "install": "concurrently \"npm run install-spray\" \"npm run install-signaling\"",
    "install-spray": "cd ./lib/spray-wrtc && npm install",
    "install-signaling": "cd ./example/signaling-server && npm install",
    "build": "browserify -r ./lib/foglet.js:foglet  | uglifyjs > ./build/foglet.bundle.js",
    "build-debug": "browserify -r ./lib/foglet.js:foglet --debug -t babelify --presets es2015 > ./build/foglet.bundle.debug.js",
    "build-debug-watch": "watchify -r  ./lib/foglet.js:foglet -r ./lib/spray-wrtc/lib/spray.js:spray-wrtc --debug -o ./build/foglet.bundle.debug.js -v -d",
    "build-proper-watch": "concurrently \"npm run build-debug-watch\" \"npm run proper\"",
    "http-server": "cd example && node http-server.js",
    "signaling-server": "cd example/signaling-server && node server.js",
    "server": "concurrently \"npm run http-server\"  \"npm run signaling-server\"",
    "dev-all": "concurrently \"npm run http-server\"  \"npm run signaling-server\" \"npm run build-debug-watch\""
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bootstrap": "^3.3.7",
    "causal-broadcast-definition": "^0.1.x",
    "events": "^1.1.1",
    "express": "^4.14.0",
    "jquery": "^3.1.1",
    "socket.io": "^1.4.8",
    "socket.io-client": "^1.4.8",
    "spray-wrtc": "^0.1.x",
    "util": "^0.10.3",
    "version-vector-with-exceptions": "0.0.x",
    "wrtc": "0.0.61"
  },
  "bundledDependencies": [
    "version-vector-with-exceptions",
    "causal-broadcast-definition",
    "spray-wrtc"
  ],
  "devDependencies": {
    "babel-core": "^6.18.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-es2016": "^6.16.0",
    "babel-register": "^6.18.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "chai": "^3.5.0",
    "concurrently": "^3.1.0",
    "istanbul": "^0.4.5",
    "karma": "^1.3.0",
    "karma-browserify": "^5.1.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.1.1",
    "karma-edge-launcher": "^0.1.1",
    "karma-firefox-launcher": "^1.0.0",
    "karma-mocha": "^1.2.0",
    "karma-mocha-reporter": "^2.2.0",
    "karma-safari-launcher": "^1.0.0",
    "karma-socketio-server": "^1.0.0",
    "mocha": "^3.1.2",
    "nyc": "^8.3.2",
    "uglifyjs": "^2.4.10",
    "watchify": "^3.7.0",
    "xo": "^0.17.0"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  },
  "xo": {
    "envs": [
      "node",
      "browser",
      "mocha"
    ],
    "esnext": false,
    "ignores": [
      "./lib/spray-wrtc",
      "./build",
      "./example",
      "./test"
    ]
  },
  "nyc": {
    "lines": 90,
    "statements": 90,
    "functions": 90,
    "branches": 90,
    "include": [
      "lib/f*.js"
    ],
    "exclude": [
      "lib/spray-wrtc/**/*.js"
    ],
    "reporter": [
      "lcov",
      "json",
      "text"
    ],
    "extension": [
      ".js"
    ],
    "cache": true,
    "all": true,
    "check-coverage": false,
    "report-dir": "./coverage"
  }
}
