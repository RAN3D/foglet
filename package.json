{
  "name": "foglet",
  "version": "0.0.1",
  "description": "",
  "main": "./lib/foglet.js",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/folkvir/foglet.git"
  },
  "scripts": {
    "test": "npm run karma",
    "karma": "karma start karma.config.js",
    "cover": "nyc npm test",
    "proper": "xo --fix ./lib/**/*.js ",
    "install": "concurrently \"npm run install-spray\" \"npm run install-signaling\" \"npm run install-linked-data\"",
    "install-spray": "cd ./external-lib/spray-wrtc && npm install",
    "install-linked-data": "cd ./external-lib/Client.js-master/ && npm install",
    "install-signaling": "cd ./example/signaling-server && npm install",
    "build": "browserify -r ./lib/foglet.js:foglet -t babelify --presets es2015 -r ./external-lib/Client.js-master/ldf-client.js:ldf-client  -r ./external-lib/spray-wrtc/lib/spray.js:spray-wrtc -t babelify --presets es2015 > ./build/foglet.all.bundle.js | uglifyjs > ./build/foglet.all.bundle.js",
    "build-watch": "watchify -r ./lib/foglet.js:foglet -t babelify --presets es2015 -r ./external-lib/Client.js-master/ldf-client.js:ldf-client  -r ./external-lib/spray-wrtc/lib/spray.js:spray-wrtc -t babelify --presets es2015 -o ./build/foglet.all.bundle.js -v -d | uglifyjs > ./build/foglet.all.bundle.js",
    "server": "concurrently \"npm run http-server\"  \"npm run signaling-server\"",
    "dev-all": "concurrently \"npm run http-server\"  \"npm run signaling-server\" \"npm run build-watch\"",
    "http-server": "cd example && node http-server.js",
    "signaling-server": "cd example/signaling-server && node server.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "bootstrap": "^3.3.7",
    "causal-broadcast-definition": "^0.1.x",
    "events": "^1.1.1",
    "express": "^4.14.0",
    "jquery": "^3.1.1",
    "socket.io": "^1.4.8",
    "socket.io-client": "^1.4.8",
    "spray-wrtc": "^0.1.x",
    "util": "^0.10.3",
    "version-vector-with-exceptions": "0.0.x"
  },
  "bundledDependencies": [
    "version-vector-with-exceptions",
    "causal-broadcast-definition",
    "spray-wrtc"
  ],
  "devDependencies": {
    "babel-core": "^6.18.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-es2016": "^6.16.0",
    "babel-register": "^6.18.0",
    "babelify": "^7.3.0",
    "browserify": "^13.1.0",
    "chai": "^3.5.0",
    "concurrently": "^3.1.0",
    "express": "^4.14.0",
    "istanbul": "^0.4.5",
    "karma": "^1.3.0",
    "karma-browserify": "^5.1.0",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.0.0",
    "karma-coverage": "^1.1.1",
    "karma-edge-launcher": "^0.1.1",
    "karma-express-http-server": "0.0.1",
    "karma-firefox-launcher": "^1.0.0",
    "karma-mocha": "^1.2.0",
    "karma-mocha-reporter": "^2.2.0",
    "karma-safari-launcher": "^1.0.0",
    "karma-socket.io-server": "0.0.2",
    "karma-socketio-server": "^1.0.0",
    "ldf-client": "^2.0.3",
    "mocha": "^3.1.2",
    "nyc": "^8.3.2",
    "uglifyjs": "^2.4.10",
    "unicast-definition": "^0.1.0",
    "watchify": "^3.7.0",
    "xo": "^0.17.0"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  },
  "xo": {
    "envs": [
      "node",
      "browser",
      "mocha"
    ],
    "esnext": true,
    "ignores": [
      "./lib/spray-wrtc/**/*.js",
      "./build/**/*.js",
      "./example/**/*.js",
      "./test/*.js"
    ]
  },
  "nyc": {
    "lines": 90,
    "statements": 90,
    "functions": 90,
    "branches": 90,
    "include": [
      "lib/**/*.js"
    ],
    "reporter": [
      "lcov",
      "json",
      "text"
    ],
    "extension": [
      ".js"
    ],
    "cache": true,
    "all": true,
    "check-coverage": false,
    "report-dir": "./coverage"
  }
}
